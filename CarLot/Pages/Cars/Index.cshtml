@page
@model CarLot.Pages.Cars.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.car[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.car[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.car[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.car[0].Engine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.car[0].Doors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.car[0].Fuel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.car[0].Gearbox)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.car) {
        <tr>
            <td> 
                <img src="@Url.Content(item.ImageUrl)" alt="Sample Image" width="300px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Engine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fuel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gearbox)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
